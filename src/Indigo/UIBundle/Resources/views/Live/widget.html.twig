                <span id="widget-preloader" style="position: absolute; width: 50%; height: 100%; background: url({{ asset('bundles/indigoui/images/preloader-rect.gif') }}) no-repeat center"> </span>
                <span id="widget-title" style="display: none">  </span>
                <span id="widget-state" style="display: none">  </span>
